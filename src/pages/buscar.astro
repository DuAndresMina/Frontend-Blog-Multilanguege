---
import Layout from '../layouts/Layout.astro';
import MinimalNavbar from '../components/MinimalNavbar';
import SearchPosts from '../components/SearchPosts.jsx';
const searchQuery = Astro.url.searchParams.get('q') || '';
const locale      = Astro.url.searchParams.get('lang') || 'es-CO';
---

<Layout title={`${locale==='es-CO'?'Buscar':'Search'}: ${searchQuery}`}>
  <MinimalNavbar client:load />
  <main class="pt-24 pb-16">
    <div class="max-w-3xl mx-auto px-4">
      <SearchPosts client:load initialQuery={searchQuery} initialLocale={locale} />
    </div>
  </main>
</Layout>
