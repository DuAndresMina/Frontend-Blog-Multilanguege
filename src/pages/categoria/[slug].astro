---
import Layout from '../../layouts/Layout.astro';
import { getCategories } from '../../services/categoryService';
import { getBlogPosts } from '../../services/blogService';
import BlogCard from '../../components/BlogCard';

export async function getStaticPaths() {
  const { data: categories } = await getCategories();
  return categories.map((category) => ({
    params: { slug: category.slug },
    props: { category },
  }));
}

const { category } = Astro.props;
const { data: posts } = await getBlogPosts();
const categoryPosts = posts.filter(post => post.categoria?.slug === category.slug);
---

<Layout 
  title={`${category.Nombre} - Blog`}
  metaDescription={category.Descripcion}
>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold mb-4">{category.Nombre}</h1>
      <p class="text-gray-600 mb-8">{category.Descripcion}</p>
      
      {categoryPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {categoryPosts.map((post) => (
            <BlogCard client:load post={post} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500">No hay artículos disponibles en esta categoría.</p>
        </div>
      )}
    </div>
  </main>
</Layout> 